<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.software.hms.projeto.MenuActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.VisibilityAwareImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logocrz"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="-6dp">
            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/lnSejaAmigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/seja_amigo"
                android:layout_marginTop="278dp"
                android:scaleType="fitXY"
                android:layout_marginRight="20dp"
                android:paddingLeft="-9dp"/>
            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/lnAmigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cartao_amigo"
                android:layout_marginTop="214dp"
                android:layout_marginLeft="-3dp"
                android:scaleType="fitXY" />
            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/lnDescontos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rede_de_descontos"
                android:layout_marginTop="163dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="-7dp"
                android:scaleType="fitXY"/>
            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/lnProjetos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/projetos"
                android:layout_marginTop="105dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="-9dp" />
            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/lnMensagens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mensagens"
                android:layout_marginTop="46dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="-9dp"
                android:layout_marginRight="5dp"/>
            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/lnNoticias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/noticias"
                android:layout_marginLeft="-6dp"
                android:scaleType="fitXY"
                android:layout_marginRight="80dp"/>
    </FrameLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <include layout="@layout/rodape_layout"/>
    </LinearLayout>





</LinearLayout>