<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.software.hms.projeto.MenuActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.VisibilityAwareImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logocrz"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp">
                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/lnNoticias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimary"
                        android:elevation="10dp">

                        <TextView
                            android:id="@+id/descMenu"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:paddingTop="10dp"
                            android:paddingLeft="15dp"
                            android:layout_marginRight="85dp"
                            android:textColor="@color/colorDescMenu"
                            android:text="Noticias"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/myrect"/>
                </LinearLayout>

                <android.support.design.widget.VisibilityAwareImageButton
                    android:id="@+id/imgMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_noticias"
                    android:layout_gravity="right"
                    android:layout_marginLeft="150dp"
                    android:layout_marginRight="5dp"
                    android:rotation="-20"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:id="@+id/lnMensagens"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimary"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:paddingTop="10dp"
                            android:paddingLeft="15dp"
                            android:layout_marginRight="105dp"
                            android:textColor="@color/colorDescMenu"
                            android:text="Mensagens"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/myrect"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:gravity="top"
                    android:layout_marginTop="-6dp">
                    <android.support.design.widget.VisibilityAwareImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_menssagens"

                        android:layout_marginLeft="200dp"
                        android:scaleType="center"/>
                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/lnProjetos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:paddingTop="10dp"
                            android:paddingLeft="15dp"
                            android:layout_marginRight="165dp"
                            android:textColor="@color/colorDescMenu"
                            android:text="Projetos"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/myrect"/>
                </LinearLayout>

                <android.support.design.widget.VisibilityAwareImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_project"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="-7dp"
                    android:layout_marginLeft="230dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/lnDescontos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:paddingTop="10dp"
                            android:paddingLeft="15dp"
                            android:layout_marginRight="120dp"
                            android:textColor="@color/colorDescMenu"
                            android:text="Rede de Descontos"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/myrect"/>
                </LinearLayout>

                <android.support.design.widget.VisibilityAwareImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_rede_descontos"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="-7dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/lnAmigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:paddingTop="10dp"
                            android:paddingLeft="15dp"
                            android:layout_marginRight="120dp"
                            android:textColor="@color/colorDescMenu"
                            android:text="CartÃ£o Amigo"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/myrect"/>
                </LinearLayout>

                <android.support.design.widget.VisibilityAwareImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_card"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="215dp"
                    android:layout_marginTop="-7dp"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/lnSejaAmigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textStyle="normal"
                            android:paddingTop="10dp"
                            android:paddingLeft="15dp"
                            android:layout_marginRight="135dp"
                            android:textColor="@color/colorDescMenu"
                            android:text="Seja um Amigo"/>
                    </android.support.v7.widget.LinearLayoutCompat>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/myrect"/>
                </LinearLayout>

                <android.support.design.widget.VisibilityAwareImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_donation"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="255dp"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <include layout="@layout/rodape_layout"/>
    </LinearLayout>





</LinearLayout>