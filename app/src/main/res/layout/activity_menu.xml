<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.software.hms.projeto.MenuActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.VisibilityAwareImageButton
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/logocrz"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lnSejaAmigo"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="284dp"
                android:layout_marginRight="49dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="SEJA UM AMIGO"
                        android:textSize="24sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="14dp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnCartaoAmigo"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="227dp"
                android:layout_marginRight="95dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="CARTÃO AMIGO"
                        android:textSize="23sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="14dp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnRede"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="170dp"
                android:layout_marginRight="25dp"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_weight="2.79">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="REDE DE DESCONTOS"
                        android:textSize="23sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="14dp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnProjetos"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="113dp"
                android:layout_marginRight="85dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="PROJETOS"
                        android:textSize="23sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="14dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnMensagens"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="56dp"
                android:layout_marginRight="70dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="MENSAGENS"
                        android:textSize="23sp"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="14dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnNoticias"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="110dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="NOTÍCIAS"
                        android:textSize="23sp"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="14dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/imgNoticia"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/icon_noticias"
                android:layout_gravity="right"
                android:layout_marginTop="-11dp"
                android:layout_marginRight="75dp"/>
            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/imgMsg"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/icon_mensagens"
                android:layout_gravity="right"
                android:layout_marginTop="50dp"
                android:layout_marginRight="19dp"
                android:scaleType="fitStart"/>
            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/imgProjeto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/icon_projeto"
                android:layout_gravity="right"
                android:layout_marginTop="114dp"
                android:layout_marginRight="68dp"
                android:scaleType="fitStart"/>
            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/imgRede"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:src="@drawable/icon_rede"
                android:layout_gravity="right"
                android:layout_marginTop="159dp"
                android:layout_marginRight="-10dp"/>
            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/imgCartao"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_cartao"
                android:layout_gravity="right"
                android:layout_marginTop="215dp"
                android:layout_marginRight="63dp"
                android:scaleType="fitStart"/>
            <android.support.design.widget.VisibilityAwareImageButton
                android:id="@+id/imgSejaAmigo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/icon_amigo"
                android:layout_gravity="right"
                android:layout_marginRight="6dp"
                android:layout_marginTop="285dp"
                android:scaleType="fitStart"/>
          </FrameLayout>
        </ScrollView>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">
            <include layout="@layout/rodape_layout"/>
    </LinearLayout>
    
    
    
    
    
    </LinearLayout>