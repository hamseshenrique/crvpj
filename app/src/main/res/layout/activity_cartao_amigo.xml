<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.software.hms.projeto.CartaoAmigoActivity">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.Android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="@dimen/cardview_compat_inset_shadow"
        android:layout_margin="12dp"
        card_view:cardCornerRadius="20dp"
        card_view:elevation="10dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">

                <android.support.design.widget.VisibilityAwareImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="95dp"
                    android:src="@drawable/logocrz"
                    android:layout_gravity="right"
                    android:layout_marginRight="-10dp"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="top">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:orientation="vertical"
                        android:layout_marginTop="-8dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/colorPrimary">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="left"
                            android:layout_marginLeft="130dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/nome"
                                android:text="Osvaldo Golsalvez Cruz"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left"
                                android:textSize="20sp"
                                android:layout_marginTop="20dp"
                                android:typeface="sans"
                                android:textStyle="bold"
                                android:layout_marginLeft="25dp"
                                android:textColor="@android:color/black"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="000000000001-01"
                                android:layout_gravity="left"
                                android:textSize="20sp"
                                android:typeface="sans"
                                android:layout_marginLeft="40dp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/myrect"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/amigoBack"
                        android:layout_gravity="right"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Categoria:"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:textSize="18sp"
                            android:typeface="sans"
                            android:textStyle="bold"
                            android:paddingTop="6dp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" COLABORADOR"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:textSize="14sp"
                            android:typeface="sans"
                            android:paddingTop="9dp"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>
                </LinearLayout>

                <android.support.design.widget.VisibilityAwareImageButton
                    android:layout_width="120dp"
                    android:layout_height="165dp"
                    android:id="@+id/imgPer"
                    android:src="@drawable/oswcruz"
                    android:layout_gravity="left"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="30dp"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/txtAmigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AMIGO CVB"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left"
                    android:textSize="33sp"
                    android:layout_marginLeft="30dp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textScaleX="2.5"
                    android:textColor="@android:color/holo_red_dark"
                    android:shadowColor="#555555"
                    android:shadowDx="5.0"
                    android:shadowDy="5.0"
                    android:shadowRadius="3.0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Validade: 08/19"
                    android:textSize="12sp"
                    android:layout_marginTop="35dp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
